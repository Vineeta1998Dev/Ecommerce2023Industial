@model IEnumerable<NewEcommerc.Models.Order_Tbl>

@{
    ViewBag.Title = "neworder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Customer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTIme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus)
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.OrderID)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Customer)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateTIme)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PaymentMethod)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PaymentStatus)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderStatus)
    </td>
    <td>
        <button type="button" class="btn btn-outline-success btn-sm" onclick="changestatus(@Html.DisplayFor(modelItem => item.OrderID),2)">Confirm</button>
    </td>
</tr>
    }

</table>


