
@model IEnumerable<NewEcommerc.Models.Order_Tbl>

@{
    ViewBag.Title = "confirmorder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Customer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTIme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus)
        </th>

    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.OrderID)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Customer)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateTIme)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PaymentMethod)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PaymentStatus)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderStatus)
    </td>
    <td>
        <button type="button" class="btn btn-outline-warning btn-sm" onclick="popitup(@Html.DisplayFor(modelItem => item.OrderID))">Invoice</button>
        <button type="button" class="btn btn-outline-success btn-sm" onclick="changestatus(@Html.DisplayFor(modelItem => item.OrderID),3)">Sipped</button>
    </td>
  
</tr>
    }

</table>



<script language="javascript" type="text/javascript">

    function popitup(id) {
        var url = '/admin/GenerateInvoic?ordId='+id
        newwindow = window.open(url, 'name', 'height=1000,width=800');
        if (window.focus) { newwindow.focus() }
        return false;
    }


</script>